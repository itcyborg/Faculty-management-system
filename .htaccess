RewriteEngine on


RewriteRule   ^organisations/(.+)$   view.php?organisation&id=$1   [L]
RewriteRule   ^organisations/(.+)$/  view.php?organisation&id=$1   [L]

RewriteRule   ^resources/(.+)$   view.php?resource&id=$1   [L]
RewriteRule   ^resources/(.+)$/  view.php?resource&id=$1   [L]

RewriteRule   ^forums/(.+)$   view.php?forums&id=$1   [L]
RewriteRule   ^forums/(.+)$/  view.php?forums&id=$1   [L]

RewriteRule   ^courses/(.+)$   view.php?courses&id=$1   [L]
RewriteRule   ^courses/(.+)$/  view.php?courses&id=$1   [L]